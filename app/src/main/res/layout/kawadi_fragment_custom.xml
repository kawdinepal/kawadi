<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/gilfoyle"
                android:id="@+id/kawadi_fragment_custom_profile_iv"
                android:layout_marginBottom="5dp"
                android:layout_width="85dp"
                android:layout_height="85dp" />

        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Suresh Agrawal"
                android:id="@+id/kawadi_fragment_custom_name"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="lives in Koteshwo"
                android:layout_below="@id/kawadi_fragment_custom_name"
                android:id="@+id/kawadi_fragment_custom_address"
                android:textSize="18sp"
                android:textColor="@android:color/holo_blue_bright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="मेरो 6 जना परिवार हरु छन् म आफ्नो परिवार हरु "
                android:id="@+id/kawadi_fragment_custom_status"
                android:layout_below="@id/kawadi_fragment_custom_address"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/round_call_white_36dp"
            android:id="@+id/kawadi_fragment_custom_call_iv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <ImageView
            android:id="@+id/kawadi_fragment_custom_trash_iv"
            android:src="@drawable/trash2"
            android:layout_toLeftOf="@+id/kawadi_fragment_custom_call_iv"
            android:layout_marginRight="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />


    </RelativeLayout>






</LinearLayout>